# MarketMind AI Production Environment Variables
# Copy this file to .env and update with your actual values

# Domain Configuration
DOMAIN=yourdomain.com

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_postgres_password_here

# Security Keys (Generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-512-bits-long-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-512-bits-long-change-this-in-production

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-app-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@yourdomain.com

# AI API Keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Social Media
TWITTER_HANDLE=@yourdomain
LINKEDIN_URL=https://linkedin.com/company/yourdomain