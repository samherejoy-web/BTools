# Production Environment Configuration for MarketMind AI
# Copy this file to .env for production deployment

# Environment
ENVIRONMENT=production
DEBUG=False

# Database Configuration - PostgreSQL
# Update with your production PostgreSQL credentials
PRODUCTION_DATABASE_URL=postgresql://marketmind:your_secure_password_here@localhost:5432/marketmind_prod

# For migration from SQLite, this will be used as the target
DATABASE_URL=postgresql://marketmind:your_secure_password_here@localhost:5432/marketmind_prod

# Security Keys - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-this-in-production-512-bits-long-key
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-also-512-bits

# CORS Configuration - Update with your production domain
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Email Configuration - Production SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-app-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@yourdomain.com

# AI API Keys (Keep your existing keys)
GROQ_API_KEY=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

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/var/www/marketmind/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=MarketMindAI
APP_VERSION=2.0.0
APP_DESCRIPTION=B2B Tools and Blogging Platform with AI Integration

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/marketmind/app.log

# Health Check
HEALTH_CHECK_INTERVAL=60

# SEO Settings
SITE_URL=https://yourdomain.com
SITE_NAME=MarketMind AI
SITE_DESCRIPTION=Discover and compare the best B2B tools with AI-powered insights